            this.echo("hello world")
            this.echo("hello world")
        },
        test: function () {
            this.echo($("<button onclick=\"runTest()\">run test</button>"))
        },
        foo: async function () {
            this.echo('.', { newline: false });
            await sleep(1000);
            this.echo('.', { newline: false });
            await sleep(1000);
            this.echo('.', { newline: false });
        },
        cat: function () {
            randomNum0 = getRandomInt(300, 600);
            randomNum1 = getRandomInt(300, 600);
            const img = $('<img src="https://placekitten.com/' + randomNum0 + '/' + randomNum1 + '">');
            img.on("load", this.resume)
            this.pause()
            this.echo(img);
            this.echo("\n")
        },
    }, {
        greetings: "Welcome!",
        prompt: 'paradis.dev > ',
    });

